---
import ModelY from "../components/ModelY.astro";
import LandingHeader from "../components/LandingHeader.astro";
import LandingFooter from "../components/LandingFooter.astro";
import Model3 from "../components/Model3.astro";
import ModelX from "../components/ModelX.astro";
import ModelS from "../components/ModelS.astro";
import CybertruckSection from "../components/CybertruckSection.astro";
import SolarPanel from "../components/SolarPanel.astro";
import SolarRoof from "../components/SolarRoof.astro";
import Powerwall from "../components/Powerwall.astro";
import Accesesories from "../components/Accesesories.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Electric Cars, Solar & Clena Energy | Tesla">
  <LandingHeader />
  <main
    class="snap-y snap-mandatory relative w-full h-screen scroll-smooth overflow-auto"
  >
    <div class="snap-center">
      <ModelY />
    </div>

    <div class="snap-center">
      <Model3 />
    </div>

    <div class="snap-center">
      <ModelX />
    </div>

    <div class="snap-center">
      <ModelS />
    </div>

    <div class="snap-center">
      <CybertruckSection />
    </div>

    <div class="snap-center">
      <SolarPanel />
    </div>

    <div class="snap-center">
      <SolarRoof />
    </div>

    <div class="snap-center">
      <Powerwall />
    </div>

    <div id="accessories"  class="snap-center">
      <Accesesories />
    </div>

    <div id="footer" class="snap-center">
      <LandingFooter />
    </div>
  </main>
</Layout>

<script src="/src/utils/headerFooterLogic.js"></script>