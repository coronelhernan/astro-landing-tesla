---
import Section from "./Section.astro";

const {
  color = 'white', title = 'Model 3', subtitle = '$0 Due at Signing', data = 'From $34,990Â²',
  buttons = {
    primary: {
      label: 'Order Now',
      href: '#'
    },
    secondary: {
      label: 'Experience Model 3',
      href: '#'
    }
  }
} = Astro.props;
---

<Section
  color={color}
  id="section-model-3"
>
  <div slot="header" class="flex flex-col items-center gap-0">
    <h1 class="text-5xl font-semibold text-white">{title}</h1>
    <a class="text-2xl font-semibold text-white underline underline-offset-4">{subtitle}</a>
    <p class="text-white font-medium">{data}</p>
  </div>

  <div slot="footer" class="gap-x-4 flex mx-auto">
    <a
      class="bg-custom-blue text-sm rounded font-medium text-white px-24 py-3 inline-block transition-opacity duration-300 hover:opacity-80"
      href={buttons.primary.href}>
      {buttons.primary.label}
    </a>

    <a 
      class="bg-white text-sm rounded font-medium text-gray-800 px-16 py-3 inline-block transition-opacity duration-300 hover:opacity-80 hover:bg-gray-200"
      href={buttons.primary.href}>
      {buttons.secondary.label}
    </a>
  </div>

  <img
    slot="background"
    alt="Model 3 img"
    class="h-full w-full object-cover object-center"
    src="Model-3.avif"
    id="bg-image-models"
  />
</Section>