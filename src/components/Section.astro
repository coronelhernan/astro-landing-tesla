---
const { color, id, showFooterContent } = Astro.props;
import FooterMenu from './FooterMenu.astro';
---

<section
  class="landing-section bg-black h-screen w-screen text-center overflow-hidden relative"
  data-header-color={color}
  id={id}
>
  <div class="z-30 relative h-full flex flex-col items-center justify-between">
    <header class="py-24">
      <slot name="header" /> 
    </header>

    <footer class="flex flex-col items-center pb-12 w-full">
      <slot name="footer" />
      {showFooterContent && <FooterMenu /> }
    </footer>
  </div>

  <div class="absolute top-0 bottom-0 h-full w-full z-10">
    <slot name="background" />
  </div>
</section>